sub('\.','',"test.")
sub('\\.','',"test.")
sub('\\.','',"test.")
gsub(" ","",gsub("\\.","",colnames(ld_full)))
colnames(ld_full) <- gsub(" ","",gsub("\\.","",colnames(ld_full)))
